@{
    ViewData["Title"] = "Home Page";
}
@model List<Chef>
<div class="header">
    <p></p> <h5>Chefs | <a href="/dishes">Dishes</a></h5> <a href="/new"> Add a Chef</a>
</div>
<h5>Check out our roster of Chefs!</h5>
<div class="line"></div>

<div class="main">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col"># of Dishes</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var c in @Model)
            {
                int now = int.Parse(DateTime.Now.ToString("yyyyMMdd"));
                int dob = int.Parse(@c.DOB.ToString("yyyyMMdd"));
                int age = (now - dob) / 10000;
                <tr>
                    <td>@c.FirstName @c.LastName</td>
                    <td>@age</td>
                    <td>@c.DishesMade.Count</td>
                </tr>
            }
        </tbody>
    </table>
</div>