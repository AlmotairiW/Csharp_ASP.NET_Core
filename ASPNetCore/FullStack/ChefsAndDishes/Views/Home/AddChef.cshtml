@{
    ViewData["Title"] = "Add a Chef";
}
@model Chef
<div class="text-center">
<h1>@ViewData["Title"]</h1>
</div>

<a href="/">Home</a>

<form asp-action="CreateChef" asp-controller="Home" method="POST">
    <div class="form-items">
        <div class="first">
            <div class="form-group">
                <label asp-for="FirstName"></label><br>
                <input asp-for="FirstName"><br>
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label><br>
                <input asp-for="LastName"><br>
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>

        <div class="second">
            <div class="form-group">
            <label asp-for="DOB"></label><br>
            <input asp-for="DOB"><br>
            <span class="text-danger" asp-validation-for="DOB"></span>
            </div>
        </div>
        
    </div>
    <button class="btn btn-primary">Add Chef</button>
    
</form>

